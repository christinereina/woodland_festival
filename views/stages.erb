<h1>Woodland Hills Mists</h1>

<h3>Stages</h3>

<% if @stages.any? %>
  <ul>
    <% @stages.each do |stage| %>
      <li><a href="/stages/<%= stage.id %>"><%= stage.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no stages yet!.</p>
<% end %>

<a href="/stages/new">Add a new stage</a>

<form action="/stages/search" method="get">
  <div class="form-group">
    <label for="name"> Search!</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
</div>